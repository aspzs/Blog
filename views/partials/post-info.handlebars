<article class="post">
    <div class="title">
                <h2>{{title}}</h2>
                <p>{{post_text}}</p>
                <a href="/post/{{id}}">Read More...</a>
            </div>

            <div class="meta">
                <p>
                    Posted by <b>{{user.username}}</b> on <b>{{formatDate created_at}}</b>
                </p>
            </div>
        <div class="content-section">
            <p>{{content}}</p>
        </div>
</article>