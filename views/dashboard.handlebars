<section class="new-post-section">
    <button type="submit" class="btn" id="create-new-post">Create a New Post</button>
</section>

{{#if posts.length}}
<section class="edit-form-page">
    <h2> Your Posts</h2>
    <ul class="post-list">
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Post</a>
        </li>
        {{/each}}
    </ul>
</section>
{{/if}}

<script href="/public/assets/js/create-post.js"></script>
